{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": false,
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es2017",
      "sourceMap": true,
      "allowJs": true,
      "outDir": "dist",
      "esModuleInterop": true
    },
    "include": [
      "src/**/*.ts",
      "test/**/**/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  